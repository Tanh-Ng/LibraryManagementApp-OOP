<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.librarymanagement.UI.HomePageUserController">
   <children>
      <!-- Top bar -->
      <VBox layoutX="0.0" layoutY="0.0" prefHeight="60.0" prefWidth="1200.0" style="-fx-background-color: black;">
         <children>
            <!-- HBox for search bar -->
            <HBox alignment="CENTER" spacing="10" style="-fx-padding: 10;">
               <!-- Text Field for search -->
               <TextField fx:id="searchStringField" onKeyPressed="#handleSearchDocument" prefWidth="500.0" promptText="Search documents..." />
               <!-- Search Button (optional) -->
               <Button onAction="#handleOnClickSearch" text="Search" />
            </HBox>
         </children>
      </VBox>


      <!-- Main ScrollPane -->
      <ScrollPane fitToWidth="true" hbarPolicy="NEVER" layoutX="-45.0" layoutY="60.0" prefHeight="740.0" prefWidth="1200.0">
         <content>
            <VBox fx:id="itemsContainer" alignment="TOP_CENTER" spacing="50" style="-fx-padding: 20;" />
         </content>
      </ScrollPane>
      <ListView fx:id="resultListView" layoutX="319.0" layoutY="36.0" prefHeight="0.0" prefWidth="500.0" visible="false" />
   </children>
</AnchorPane>
