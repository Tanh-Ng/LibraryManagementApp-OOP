<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="700" prefWidth="1200" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.librarymanagement.UI.HomePageUserController">
   <children>
      <!-- Top bar -->
      <VBox layoutX="0.0" layoutY="0.0" prefHeight="60.0" prefWidth="1200.0" style="-fx-background-color: black;">
         <children>
            <!-- HBox for search bar -->
            <HBox alignment="CENTER" spacing="10" style="-fx-padding: 10;">
               <!-- Text Field for search -->
               <TextField fx:id="searchStringField" onKeyPressed="#handleSearchDocument" prefWidth="500.0" promptText="Search documents..." />
               <!-- Search Button -->
               <Button onAction="#handleOnClickSearch" text="Search" />

               <!-- MenuButton for profile actions -->
               <MenuButton style="-fx-font-size: 16px; -fx-text-fill: white;" text="â˜°">
                  <items>
                     <!-- Logout Menu Item -->
                     <MenuItem onAction="#handleLogout" text="Logout" />
                     <!-- Account Settings Menu Item -->
                     <MenuItem onAction="#handleAccountSettings" text="Account Settings" />
                  </items>
               </MenuButton>
            </HBox>
         </children>
      </VBox>


      <!-- Main ScrollPane -->
      <ScrollPane fitToWidth="true" hbarPolicy="NEVER" layoutY="58.0" prefHeight="700.0" prefWidth="1200.0">
         <content>
            <VBox fx:id="itemsContainer" alignment="TOP_CENTER" spacing="50" style="-fx-padding: 20;" />
         </content>
      </ScrollPane>

      <!-- Result search -->
      <ListView fx:id="resultListView" layoutX="284.0" layoutY="41.0" onMouseClicked="#handlePickDocument" prefHeight="0.0" prefWidth="500.0" visible="false" />

      <!-- Book details box -->
      <HBox fx:id="bookDetailsBox" alignment="CENTER" prefHeight="247.0" prefWidth="500.0" spacing="20" style="-fx-background-color: white;" visible="false">
         <!-- Book Cover on the Left -->
         <ImageView fx:id="bookCoverImageView" fitHeight="220" fitWidth="150" preserveRatio="true" />
         <!-- Book Details on the Right -->
         <VBox alignment="TOP_LEFT" prefWidth="300" spacing="10">
            <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Book Details" />
            <Label fx:id="titleLabel" style="-fx-font-size: 14px;" text="Title: " wrapText="true" />
            <Label fx:id="authorLabel" style="-fx-font-size: 14px;" text="Author: " wrapText="true" />
            <Label fx:id="publisherLabel" style="-fx-font-size: 14px;" text="Publisher: " wrapText="true" />
            <Label fx:id="publishDateLabel" style="-fx-font-size: 14px;" text="Published Date: " wrapText="true" />
            <Label style="-fx-font-size: 14px;" text="Scan to Access Document:" />
            <ImageView fx:id="qrCodeImageView" fitHeight="150" fitWidth="150" preserveRatio="true" />
         </VBox>
      </HBox>
   </children>
</AnchorPane>
