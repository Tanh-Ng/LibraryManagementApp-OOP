<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="700" prefWidth="1200" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.librarymanagement.UI.General.BookDetailsController">
    <ImageView fx:id="bookCoverImageView" fitHeight="361.0" fitWidth="266.0" layoutX="86.0" layoutY="29.0" preserveRatio="true" />
     <ImageView fx:id="qrCodeImageView" fitHeight="183.0" fitWidth="206.0" layoutX="497.0" layoutY="217.0" preserveRatio="true" />
     <Button fx:id="closeButton" layoutX="22.0" layoutY="14.0" onAction="#handleClose" style="-fx-alignment: center;" text="BACK" />

    <VBox alignment="TOP_LEFT" layoutX="471.0" layoutY="14.0" prefHeight="217.0" prefWidth="454.0" spacing="10">
        <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Book Details" />
        <Label fx:id="titleLabel" style="-fx-font-size: 14px;" text="Title: " wrapText="true" />
        <Label fx:id="authorLabel" style="-fx-font-size: 14px;" text="Author: " wrapText="true" />
        <Label fx:id="publisherLabel" style="-fx-font-size: 14px;" text="Publisher: " wrapText="true" />
        <Label fx:id="publishDateLabel" style="-fx-font-size: 14px;" text="Published Date: " wrapText="true" />
        <Label style="-fx-font-size: 14px;" text="Scan to Access Document:" />
    </VBox>
</AnchorPane>
